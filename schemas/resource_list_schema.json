{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "http://example.com/example.json",
    "title": "Root Schema",
    "type": "object",
    "required": [
        "page",
        "per_page",
        "total",
        "total_pages",
        "data",
        "support"
    ],
    "properties": {
        "page": {
            "title": "The page Schema",
            "type": "integer"
        },
        "per_page": {
            "title": "The per_page Schema",
            "type": "integer"
        },
        "total": {
            "title": "The total Schema",
            "type": "integer"
        },
        "total_pages": {
            "title": "The total_pages Schema",
            "type": "integer"
        },
        "data": {
            "title": "The data Schema",
            "type": "array",
            "items": {
                "title": "A Schema",
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "year",
                    "color",
                    "pantone_value"
                ],
                "properties": {
                    "id": {
                        "title": "The id Schema",
                        "type": "integer"
                    },
                    "name": {
                        "title": "The name Schema",
                        "type": "string"
                    },
                    "year": {
                        "title": "The year Schema",
                        "type": "integer"
                    },
                    "color": {
                        "title": "The color Schema",
                        "type": "string"
                    },
                    "pantone_value": {
                        "title": "The pantone_value Schema",
                        "type": "string"
                    }
                }
            }
        },
        "support": {
            "title": "The support Schema",
            "type": "object",
            "required": [
                "url",
                "text"
            ],
            "properties": {
                "url": {
                    "title": "The url Schema",
                    "type": "string"
                },
                "text": {
                    "title": "The text Schema",
                    "type": "string"
                }
            }
        }
    }
}